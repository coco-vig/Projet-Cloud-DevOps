# Flask
FLASK_ENV=development
FLASK_DEBUG=1
APP_HOST=0.0.0.0
APP_PORT=5000

# Cache
CACHE_TTL_SECONDS=60

# Azure Blob Storage (do NOT put real secrets here)
AZURE_STORAGE_ACCOUNT_NAME=your_account_name
AZURE_STORAGE_CONTAINER_NAME=content
# Option 1 (simple): connection string (recommended for local dev only)
AZURE_STORAGE_CONNECTION_STRING=replace_me
# Option 2 (bonus later): Managed Identity (AKS) -> no secret required
